@page
@model Cofetarie.Pages.Interogari_Simple.Interogare3Model

<h1>Interogare 3</h1>

<p>Aceasta este o interogare care afișează Angajatul care lucreaza la cele mai multe comenzi plasate dupa data de 16-10-2023, unde metoda de plata fost cash.</p>

@if (Model.RezultateInterogare3.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nume Angajat</th>
                <th>Prenume Angajat</th>
                <th>Numar Comenzi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.RezultateInterogare3)
            {
                <tr>
                    <td>@result.NumeAngajat</td>
                    <td>@result.PrenumeAngajat</td>
                    <td>@result.NumarComenzi</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nu există rezultate pentru această interogare.</p>
}

<a class="btn btn-secondary" asp-page="/Interogari_Simple/Index">Înapoi</a>
