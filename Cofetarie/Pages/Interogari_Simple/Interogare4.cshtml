@page
@model Cofetarie.Pages.Interogari_Simple.Interogare4Model

<h1>Interogare 4</h1>

<p>Aceasta este o interogare care afișează numele primilor 3 furnizor de la care importam cele mai multe ingrediente care au pretperKg > 35 ron.</p>

@if (Model.RezultateInterogare4.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nume Furnizor</th>
                <th>Numar Ingrediente Furnizate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.RezultateInterogare4)
            {
                <tr>
                    <td>@result.NumeFurnizor</td>
                    <td>@result.NumarIngrediente </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nu există rezultate pentru această interogare.</p>
}

<a class="btn btn-secondary" asp-page="/Interogari_Simple/Index">Înapoi</a>
